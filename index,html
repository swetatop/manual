        <div class="container">
            <p>¬© 2024 ModHub | Ukraine GTA V –ú–æ–¥–µ—Ä–∞—Ü—ñ–π–Ω–∞ —Å–∏—Å—Ç–µ–º–∞</p>
            <p style="margin-top: 10px; font-size: 12px; color: var(--gray);">
                <i class="fas fa-lock"></i> –ü—Ä–∏–≤–∞—Ç–Ω–∏–π –¥–æ—Å—Ç—É–ø ‚Ä¢ –í–µ—Ä—Å—ñ—è 2.1 ‚Ä¢ 
                <span style="color: var(--primary);">UI/UX: Modern Design</span>
            </p>
        </div>
    </footer>

    <script>
        // Modern Navigation System
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.content-section');
            const navIndicator = document.getElementById('navIndicator');
            const cardButtons = document.querySelectorAll('.card-button');
            
            // Set initial indicator position
            updateNavIndicator();
            
            // Navigation click handler
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    
                    // Update active nav item with animation
                    navItems.forEach(nav => {
                        nav.classList.remove('active');
                        nav.style.transform = 'scale(1)';
                    });
                    
                    this.classList.add('active');
                    this.style.transform = 'scale(1.05)';
                    
                    // Show target section with animation
                    sections.forEach(section => {
                        if (section.classList.contains('active')) {
                            section.style.animation = 'slideIn 0.5s ease reverse';
                            setTimeout(() => {
                                section.classList.remove('active');
                            }, 250);
                        }
                        
                        if (section.id === targetId) {
                            setTimeout(() => {
                                section.classList.add('active');
                            }, 250);
                        }
                    });
                    
                    // Update indicator position
                    updateNavIndicator();
                    
                    // Smooth scroll to top
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            });
            
            // Card button click handler
            cardButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    
                    if (targetId) {
                        // Find and click corresponding nav item
                        const targetNav = document.querySelector(`.nav-item[data-target="${targetId}"]`);
                        if (targetNav) {
                            targetNav.click();
                        }
                    }
                });
            });
            
            // Update navigation indicator position
            function updateNavIndicator() {
                const activeNav = document.querySelector('.nav-item.active');
                if (activeNav && navIndicator) {
                    const navRect = activeNav.getBoundingClientRect();
                    const containerRect = document.querySelector('.nav-container').getBoundingClientRect();
                    
                    navIndicator.style.width = `${navRect.width - 20}px`;
                    navIndicator.style.left = `${navRect.left - containerRect.left + 10}px`;
                }
            }
            
            // Update indicator on window resize
            window.addEventListener('resize', updateNavIndicator);
            
            // Add hover effects to cards
            const featureCards = document.querySelectorAll('.feature-card');
            featureCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.card-icon');
                    if (icon) {
                        icon.style.transform = 'scale(1.1) rotate(5deg)';
                    }
                });
                
                card.addEventListener('mouseleave', function() {
                    const icon = this.querySelector('.card-icon');
                    if (icon) {
                        icon.style.transform = 'scale(1) rotate(0deg)';
                    }
                });
            });
            
            // Simulate loading animation
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
            
            // Initialize user data
            console.log('%cüöÄ ModHub System Loaded', 'color: #6366f1; font-size: 16px; font-weight: bold;');
            console.log('%cUser: Perets (Senior Moderator)', 'color: #8b5cf6;');
            console.log('%cAccess Level: Advanced', 'color: #10b981;');
        });
        
        // Coming soon notification
        function showComingSoon() {
            const notification = document.createElement('div');
            notification.innerHTML = `
                <div style="position: fixed; top: 20px; right: 20px; background: var(--gradient-primary); color: white; padding: 15px 25px; border-radius: var(--radius-md); z-index: 9999; box-shadow: var(--shadow-lg); animation: slideInRight 0.5s ease;">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-rocket"></i>
                        <div>
                            <div style="font-weight: 600;">–§—É–Ω–∫—Ü—ñ—è –≤ —Ä–æ–∑—Ä–æ–±—Ü—ñ</div>
                            <div style="font-size: 12px; opacity: 0.9;">–î–æ—Å—Ç—É–ø–Ω–∞ –≤ –Ω–∞—Å—Ç—É–ø–Ω–æ–º—É –æ–Ω–æ–≤–ª–µ–Ω–Ω—ñ</div>
                        </div>
                    </div>
                </div>
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideInRight 0.5s ease reverse';
                setTimeout(() => {
                    notification.remove();
                }, 500);
            }, 3000);
            
            // Add animation if not exists
            if (!document.querySelector('#slideInRight')) {
                const style = document.createElement('style');
                style.id = 'slideInRight';
                style.textContent = `
                    @keyframes slideInRight {
                        from { transform: translateX(100%); opacity: 0; }
                        to { transform: translateX(0); opacity: 1; }
                    }
                `;
                document.head.appendChild(style);
            }
        }
    </script>
</body>
</html>
